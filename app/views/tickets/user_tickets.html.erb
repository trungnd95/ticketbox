<div class="container">
  <div class="event-new">
    <div class="event-new-header">
      <h3 class="text-center">Your's tickets</h3>
    </div>
    <div class="event-new-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>STT</th>
            <th>Type</th>
            <th>Bought At</th>
            <th>Price Each</th>
            <th>Quantity</th>
          </tr>
        </thead>
        <tbody>
          <% @tickets.each.with_index do |ticket,i| %>
            <tr>
              <td><%= i+1 %></td>
              <td><%= ticket.ticket_type.name %></td>
              <td> <%= ticket.created_at.strftime("%A, %B %d, %H:%M") %> </td>
              <td> <%= number_to_currency(ticket.ticket_type.price, unit: 'VND ', precision: 0) %> </td>
              <td> <%= ticket.quantity %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
