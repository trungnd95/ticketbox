<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="form-devise">
          <div class="form-header">
            <h3 class="text-center">
              Sign Up
            </h3>
          </div>
          <div class="form-body">
            <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>

              <div class="form-group">
                <%= f.input :name, required: true, autofocus: true, class: "form-control", placeholder: "Name ..." %>
              </div>
              <div class="form-group">
                  <%= f.input :email, required: true , class: "form-control", placeholder: "email"%>
              </div>
              <div class="form-group">
                  <%= f.input :password, required: true, class: "form-control", placeholder: "passoword ..."%>
              </div>
              <div class="form-group">
                <%= f.input :password_confirmation, required: true, class: "form-control", placeholder: "Confirm password ...." %>
              </div>
              <div class="form-button">
                <%= f.button :submit, "Sign up" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
      </div>

    </div>
  </div>
</div>
